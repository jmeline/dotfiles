
function lg()
{
    export LAZYGIT_NEW_DIR_FILE=~/.lazygit/newdir

    lazygit "$@"

    if [ -f $LAZYGIT_NEW_DIR_FILE ]; then
            cd "$(cat $LAZYGIT_NEW_DIR_FILE)"
            rm -f $LAZYGIT_NEW_DIR_FILE > /dev/null
    fi
}

# nvim either opens a file or fuzzy searches for file to opens
function v()
{
    if [ -n "$1" ]
    then
        nvim $1
    else
        fd --type f --hidden --exclude .git | fzf-tmux -p --reverse | xargs -r nvim
    fi
}
