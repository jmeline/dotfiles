pacclean (){
    set -x
    sudo pacman -Syy
    sudo pacman -Scc
    sudo pacman -Suu
    sudo pacman -Rsn $(pacman -Qqdt)
    set +x
}
paclist(){
    pacman -Qei | awk '/^Name/ { name=$3 } /^Groups/ { if ( $3 != "base" && $3 != "base-devel" ) { print name } }'
}
