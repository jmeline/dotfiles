  # xrandr --output $LEFT_MONITOR --mode 1920x1080 --primary --output $RIGHT_MONITOR --mode 1920x1080 --right-of $LEFT_MONITOR --output $TV --mode 1920x1080 --left-of $LEFT_MONITOR --set underscan on --set "underscan vborder" 35 --set "underscan hborder" 50
  # xrandr --output $LEFT_MONITOR --mode 1920x1080 --primary --output $RIGHT_MONITOR --mode 1920x1080 --right-of $LEFT_MONITOR --output $TV --mode 1920x1080 --right-of $RIGHT_MONITOR --set underscan on --set "underscan vborder" 35 --set "underscan hborder" 50
# fi

# xrandr --output $LEFT_MONITOR --mode 1920x1080 --primary --output $RIGHT_MONITOR --mode 1920x1080 --right-of $LEFT_MONITOR --output $TV --mode 1920x1080 --right-of $RIGHT_MONITOR --set underscan on --set "underscan vborder" 35 --set "underscan hborder" 50

# bspc monitor HDMI-0 -d 一 二 三 四 五
# bspc monitor DVI-1 -d 六 七 八 九 十
$HOME/.config/polybar/launch.sh

bspc monitor $LEFT_MONITOR -d 一 二 三 四 五
bspc monitor $RIGHT_MONITOR -d 六 七 八 九 十
## requires bspwm-rounded-corners from https://github.com/phuhl/bspwm-rounded
bspc config border_radius 8

bspc config border_width         3
bspc config window_gap           8

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true

